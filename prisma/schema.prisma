generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

// Enums

enum UserType {
  RIDER
  DRIVER
}

enum OrderStatus {
  SEARCHING
  ACCEPTED
  ONBOARD
  COMPLETED
}

// Models

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  type UserType
}

model PriceConfigs {
  id        Int     @id @default(autoincrement())
  minimumPrice Int
  pricePerMeters Int
}

model Order {
  id        Int     @id @default(autoincrement())
  userRiderId Int
  userDriverId Int?
  price String
  distance Json
  duration Json
  source Json
  destination Json
  status OrderStatus
}