generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

// Enums

enum UserType {
  RIDER
  DRIVER
}

enum RideOrderStatus {
  SEARCHING
  ACCEPTED
  ONBOARD
  COMPLETED
}

// Models

model User {
  id     Int      @id @default(autoincrement()) @map("id")
  email  String   @unique
  name   String
  avatarUrl   String
  type   UserType
  driver Driver?
}

model Driver {
  id       Int    @id @default(autoincrement())
  userId   Int    @unique
  user     User   @relation(fields: [userId], references: [id])
  carName  String
  carColor String
}

model RidePrices {
  id             Int @id @default(autoincrement())
  minimumPrice   Int
  pricePerMeters Int
  countryAlpha2 String
}

model RideOrder {
  id           Int         @id @default(autoincrement())
  userRiderId  Int
  userDriverId Int?
  price        String
  distance     Json
  duration     Json
  source       Json
  destination  Json
  status       RideOrderStatus
}
